{
    "name": "dicr/yii2-p1sms",
    "type": "yii2-extension",
    "license": "GPL-3.0-or-later",
    "description": "Клиент p1sms.ru для Yii2",
    "keywords": ["dicr", "yii2", "p1sms"],
    "homepage": "https://gitlab.com/dicr/yii2-p1sms",
    "authors": [
        {
            "name": "Игорь Тарасов",
            "email": "develop@dicr.org",
            "homepage": "http://dicr.org",
            "role": "developer"
        }
    ],
    "support": {
        "source": "https://gitlab.com/dicr/yii2-p1sms.git"
    },
    "autoload": {
        "psr-4": {
            "dicr\\p1sms\\": "src/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "~7.4 || ~8.0",
        "ext-curl": "*",

        "yiisoft/yii2": "~2.0",
        "yiisoft/yii2-httpclient": "~2.0",

        "dicr/yii2-json": "~2.0",
        "dicr/yii2-log": "~1.3",
        "dicr/yii2-validate": "~2.3"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest"
    },
    "repositories": [
        {"type": "composer", "url": "https://asset-packagist.org"},
        {"type": "git", "url": "https://gitlab.com/dicr/yii2-json.git"},
        {"type": "git", "url": "https://gitlab.com/dicr/yii2-log.git"},
        {"type": "git", "url": "https://gitlab.com/dicr/yii2-validate.git"}
    ]
}
